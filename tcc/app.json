{
  "expo": {
    "name": "E-doso",
    "slug": "tcc",
    "version": "1.7",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "plugins": [
      [
        "@react-native-voice/voice",
        {
          "microphonePermission": "Permitir acesso ao microfone",
          "speechRecogntionPermission": "Permitir reconhecimento de voz"
        }
      ]
    ],
    "splash": {
      "image": "./assets/idoso.png",
      "resizeMode": "contain",
      "backgroundColor": "#800080"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thebesttcc.tcc"
    },
    "android": {
      "permissions": [
        "CAMERA",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA_ROLL",
        "WRITE_CONTACTS",
        "READ_EXTERNAL_STORAGE",
        "SYSTEM_ALERT_WINDOW",
        "SET_ALARM",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.thebesttcc.tcc",
      "versionCode": 7
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
